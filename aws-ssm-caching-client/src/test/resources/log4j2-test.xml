<Configuration>
    <Appenders>
        <File name="LOG" fileName="target/test.log" append="false">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="LOG"/>
        </Root>
    </Loggers>
</Configuration>
